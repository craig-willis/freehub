      %label.choice{:for => 'Publicity'} Publicity activities
      %div
      = check_box_tag(:Teaching, true, params[:Teaching], :class => 'checkbox')
      %label.choice{:for => 'Teaching'} Teaching
      %div
      = check_box_tag(:Office, true, params[:Office], :class => 'checkbox')
      %label.choice{:for => 'Office'} Office tasks (filing, sales tax computation, etc.)
      %div
      = check_box_tag(:Carpentry, true, params[:Carpentry], :class => 'checkbox')
      %label.choice{:for => 'Carpentry'} Carpentry
      %div
      = check_box_tag(:Sewing, true, params[:Sewing], :class => 'checkbox')
      %label.choice{:for => 'Sewing'} Sewing skills for shop aprons
